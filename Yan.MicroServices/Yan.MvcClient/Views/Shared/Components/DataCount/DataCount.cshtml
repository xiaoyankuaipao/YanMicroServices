@using Yan.MvcClient.ViewModel;
@model List<ArticleCountViewModel>

    <div class="count">
        <div class="count-header">
            <h3>文章分类</h3>
        </div>
        <div class="count-content">
            <ul>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <li style="margin-left:0;padding-left:0;">
                            <a asp-controller="Home" asp-action="ArticleList" asp-route-categoryId="@item.CategoryId"  asp-route-pageIndex="1">@item.CategoryName (@item.ArticleCount)</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>             