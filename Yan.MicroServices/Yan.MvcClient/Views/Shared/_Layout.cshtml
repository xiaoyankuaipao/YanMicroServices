<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yan.MvcClient</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <style>
        .navbar-default li:hover,
        .navbar-default li:focus {
            color: #5e5e5e;
            background-color: beige;
        }
        body {
            background-image: url('/image/code.jpg');
            background-size: 100%;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" style="background:darkkhaki;" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Code 笔记</a>
            </div>
            <div class=" containercollapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-home"></span> 主页 </a></li>
                    <li><a href="#shop"><span class="glyphicon glyphicon-envelope"></span> 留言</a></li>
                    <li><a href="#support"><span class="glyphicon glyphicon-headphones"></span> 生活</a></li>
                </ul>

                <partial name="_Login.cshtml" />
                
            </div>
        </div>
    </nav>

    <div class="container">


        <div class="row" style="margin-top:60px">
            <div class="col-sm-8" style="background-color:pink">

                @RenderBody()

            </div>
            <div class="col-sm-4">
                <partial name="_RightMenu.cshtml" />
            </div>
        </div>

    </div>

    @*<div class="container" style="margin-top:100px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>*@

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
